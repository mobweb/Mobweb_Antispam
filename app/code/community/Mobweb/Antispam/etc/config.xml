<config>
    <modules>
        <Mobweb_Antispam>
            <version>0.0.1</version>
        </Mobweb_Antispam>
    </modules>
    <global>
        <helpers>
            <mobweb_antispam>
                <class>Mobweb_Antispam_Helper</class>
            </mobweb_antispam>
        </helpers>
        <models>
            <mobweb_antispam>
                <class>Mobweb_Antispam_Model</class>
            </mobweb_antispam>
        </models>
    </global>
    <frontend>
        <translate>
            <modules>
                <mobweb_antispam>
                    <files>
                        <default>mobweb_antispam.csv</default>
                    </files>
                </mobweb_antispam>
            </modules>
        </translate>
        <layout>
            <updates>
                <mobweb_antispam>
                    <file>mobweb_antispam.xml</file>
                </mobweb_antispam>
            </updates>
        </layout>
        <events>
            <controller_action_predispatch_newsletter_subscriber_new>
                <observers>
                    <mobweb_antispam_newsletter_subscriber_save_before>
                        <class>mobweb_antispam/observer</class>
                        <method>controllerActionPredispatchNewsletterSubscriberNew</method>
                        <type>singleton</type>
                    </mobweb_antispam_newsletter_subscriber_save_before>
                </observers>
            </controller_action_predispatch_newsletter_subscriber_new>
            <controller_action_predispatch_customer_account_createPost>
                <observers>
                    <mobweb_antispam_controller_action_predispatch_customer_account_createPost>
                        <class>mobweb_antispam/observer</class>
                        <method>controllerActionPredispatchCustomerAccountCreatePost</method>
                        <type>singleton</type>
                    </mobweb_antispam_controller_action_predispatch_customer_account_createPost>
                </observers>
            </controller_action_predispatch_customer_account_createPost>
            <controller_action_predispatch_contacts_index_post>
                <observers>
                    <mobweb_antispam_controller_action_predispatch_contacts_index_post>
                        <class>mobweb_antispam/observer</class>
                        <method>controllerActionPredispatchContactsIndexPost</method>
                        <type>singleton</type>
                    </mobweb_antispam_controller_action_predispatch_contacts_index_post>
                </observers>
            </controller_action_predispatch_contacts_index_post>
        </events>
    </frontend>
    <default>
        <customer>
            <antispam>
                <banned_tlds><![CDATA[ru,ro,ga]]></banned_tlds>
                <banned_strings><![CDATA[И,Л,Д,П,У,Б,Ы,Ш,Ь,Ж,Г,http://,https://,youtube,affiliate,backlink,bitcoin,seo]]></banned_strings>
                <hidden_field_active><![CDATA[0]]></hidden_field_active>
            </antispam>
        </customer>
    </default>
</config>
